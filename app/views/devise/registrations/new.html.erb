<div class="container" align="center">
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Nombre del usuario" %>
  </div>

  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "Apellido del usuario" %>
  </div>

  <div class="field">
    <%= f.label :dni %><br />
    <%= f.number_field :dni, autofocus: true, autocomplete: "Documento de identidad" %>
  </div>

  <div class="field">
    <%= f.label :fecha_de_nacimiento %><br />
    <%= f.date_field :birthday, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :contraseÃ±a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contraseÃ±a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>

<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>     
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.titulo %></td>
        <td><%= task.descripcion %></td>
        <td><%= link_to 'Show', user_course_task_path(@user,@course,task) %></td>
        <td><%= link_to 'Edit', edit_user_course_task_path(@user,@course,task) %></td>
        <td><%= link_to 'Destroy', user_course_task_path(@user,@course,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_user_course_task_path %>
